{
  "name": "Sidenotes",
  "description": "Annotate the web.",
  "short_name": "Annotate the web",
  "version": "0.8.1",
  "manifest_version": 2,
  "icons": {
    "16":"icon_16.png",
    "32":"icon_32.png",
    "48":"icon_48.png",
    "64":"icon_64.png",
    "128": "icon_128.png"},
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Sidenotes",
    "default_popup": "html/popup.html"
  },
  "web_accessible_resources": [
    "chrome_oauth_receiver.html",
    "html/sidepanel.html",
    "html/options.html"
  ],
  "background": {
    "page": "html/background.html"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+N",
        "mac": "MacCtrl+N"
      },
    "description": "Toggle Sidebar"
    }
  },
  "permissions": [
    "unlimitedStorage",
    "tabs",
    "activeTab",
    "storage",
    "<all_urls>"
  ],
  "options_page": "html/options.html"
}
